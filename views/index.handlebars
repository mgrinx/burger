<nav>
    <div class="nav-wrapper">
      <a href="#" class="brand-logo center">Burger</a>
    </div>
</nav>

<div class="container">
  <div class="row">

    <div class="col s6">
      <ul class="collection with-header">
        <li class="collection-header"><h4>Uneaten burgers</h4></li>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col s6">
      <ul class="collection with-header">
        <li class="collection-header"><h4>Consumed burgers</h4></li>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devour=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>

    <div class="col s12">
      Add a burger
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Burger name:</label>
          <input type="text" id="ca" name="name">
        </div>
        <button type="submit" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></button>
      </form>
    </div>

  </div>
</div>